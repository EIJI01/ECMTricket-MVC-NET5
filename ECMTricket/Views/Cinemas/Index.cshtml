@model IEnumerable<Cinema>;

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center text-nowrap">@Html.DisplayNameFor(model => model.Logo)</th>
                    <th class="text-center text-nowrap">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="text-center text-nowrap">@Html.DisplayNameFor(model => model.Description)</th>
                    <th class="text-center text-nowrap">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle p-3">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle justify-content-lg-center p-3 text-nowrap">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="align-middle p-3 text-nowrap">@Html.DisplayFor(modelItem => item.Description)</td>
                        <td class="align-middle p-3 text-nowrap">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-secondary text-white"><i class="bi bi-eye"></i>Detial</a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
